{
  "name": "kube9-vscode",
  "displayName": "Kube9 - Kubernetes Cluster Manager",
  "version": "1.6.0",
  "license": "MIT",
  "author": "Alto9",
  "publisher": "Alto9",
  "icon": "resources/icons/kube9-icon.png",
  "keywords": [
    "kube9",
    "kubernetes",
    "cluster",
    "manager",
    "vscode",
    "extension"
  ],
  "description": "Proactive Kubernetes Intelligence - Right in Your IDE",
  "repository": {
    "type": "git",
    "url": "https://github.com/alto9/kube9-vscode"
  },
  "bugs": {
    "url": "https://github.com/alto9/kube9-vscode/issues"
  },
  "homepage": "https://github.com/alto9/kube9-vscode#readme",
  "engines": {
    "vscode": "^1.80.0",
    "node": ">=22.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:kube9ClusterView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kube9View",
          "title": "Kube9 Cluster Manager",
          "icon": "resources/icons/kube9-activity.png"
        }
      ]
    },
    "views": {
      "kube9View": [
        {
          "id": "kube9ClusterView",
          "name": "Clusters"
        }
      ]
    },
    "commands": [
      {
        "command": "kube9.refreshClusters",
        "title": "Refresh Clusters",
        "category": "kube9",
        "icon": "$(refresh)"
      },
      {
        "command": "kube9.openNamespace",
        "title": "Open Namespace",
        "category": "kube9"
      },
      {
        "command": "kube9.openDataCollectionReport",
        "title": "Open Data Collection Report",
        "category": "kube9"
      },
      {
        "command": "kube9.openClusterManager",
        "title": "Cluster Organizer",
        "category": "Kube9"
      },
      {
        "command": "kube9.setActiveNamespace",
        "title": "Set as Active Namespace",
        "category": "kube9"
      },
      {
        "command": "kube9.clearActiveNamespace",
        "title": "Clear Active Namespace",
        "category": "kube9"
      },
      {
        "command": "kube9.describeResource",
        "title": "Describe",
        "category": "kube9"
      },
      {
        "command": "kube9.describeResourceRaw",
        "title": "Describe (Raw)",
        "category": "kube9"
      },
      {
        "command": "kube9.viewResourceYAML",
        "title": "View YAML",
        "category": "Kube9"
      },
      {
        "command": "kube9.viewResourceYAMLFromPalette",
        "title": "View Resource YAML",
        "category": "Kube9"
      },
      {
        "command": "kube9.deleteResource",
        "title": "Delete Resource",
        "category": "kube9"
      },
      {
        "command": "kube9.scaleWorkload",
        "title": "Scale",
        "category": "kube9"
      },
      {
        "command": "kube9.openDashboard",
        "title": "Open Dashboard",
        "category": "kube9"
      },
      {
        "command": "kube9.openTerminal",
        "title": "Open Terminal",
        "category": "kube9"
      },
      {
        "command": "kube9.applyYAML",
        "title": "Apply YAML",
        "category": "kube9"
      },
      {
        "command": "kube9.restartWorkload",
        "title": "Restart",
        "category": "Kube9"
      },
      {
        "command": "kube9.argocd.sync",
        "title": "Sync Application",
        "category": "kube9"
      },
      {
        "command": "kube9.argocd.refresh",
        "title": "Refresh Application",
        "category": "kube9"
      },
      {
        "command": "kube9.argocd.hardRefresh",
        "title": "Hard Refresh Application",
        "category": "kube9"
      },
      {
        "command": "kube9.argocd.viewDetails",
        "title": "View Details",
        "category": "kube9"
      },
      {
        "command": "kube9.argocd.copyName",
        "title": "Copy Application Name",
        "category": "kube9"
      },
      {
        "command": "kube9.argocd.copyNamespace",
        "title": "Copy Namespace",
        "category": "kube9"
      },
      {
        "command": "kube9.showCacheStats",
        "title": "Show Cache Statistics",
        "category": "kube9"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "kube9.refreshClusters",
          "when": "view == kube9ClusterView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "kube9.setActiveNamespace",
          "when": "view == kube9ClusterView && viewItem == namespace:inactive",
          "group": "namespace@1"
        },
        {
          "command": "kube9.clearActiveNamespace",
          "when": "view == kube9ClusterView && viewItem == namespace:active",
          "group": "namespace@1"
        },
        {
          "command": "kube9.describeResource",
          "when": "view == kube9ClusterView && viewItem =~ /^resource/",
          "group": "kube9@1"
        },
        {
          "command": "kube9.describeResourceRaw",
          "when": "view == kube9ClusterView && viewItem =~ /^resource/",
          "group": "kube9@1.5"
        },
        {
          "command": "kube9.viewResourceYAML",
          "when": "view == kube9ClusterView && viewItem =~ /^resource/",
          "group": "kube9@2"
        },
        {
          "command": "kube9.openTerminal",
          "when": "view == kube9ClusterView && viewItem == resource:Pod",
          "group": "kube9@2"
        },
        {
          "command": "kube9.scaleWorkload",
          "when": "view == kube9ClusterView && (viewItem == resource:Deployment || viewItem == resource:StatefulSet || viewItem == resource:ReplicaSet)",
          "group": "kube9@3"
        },
        {
          "command": "kube9.restartWorkload",
          "when": "view == kube9ClusterView && (viewItem == resource:Deployment || viewItem == resource:StatefulSet || viewItem == resource:DaemonSet)",
          "group": "kube9@3"
        },
        {
          "command": "kube9.deleteResource",
          "when": "view == kube9ClusterView && viewItem =~ /^resource/",
          "group": "kube9@3"
        },
        {
          "command": "kube9.argocd.sync",
          "when": "view == kube9ClusterView && viewItem == argocd-application",
          "group": "argocd@1"
        },
        {
          "command": "kube9.argocd.refresh",
          "when": "view == kube9ClusterView && viewItem == argocd-application",
          "group": "argocd@1"
        },
        {
          "command": "kube9.argocd.hardRefresh",
          "when": "view == kube9ClusterView && viewItem == argocd-application",
          "group": "argocd@1"
        },
        {
          "command": "kube9.argocd.viewDetails",
          "when": "view == kube9ClusterView && viewItem == argocd-application",
          "group": "argocd@2"
        },
        {
          "command": "kube9.argocd.copyName",
          "when": "view == kube9ClusterView && viewItem == argocd-application",
          "group": "argocd@3"
        },
        {
          "command": "kube9.argocd.copyNamespace",
          "when": "view == kube9ClusterView && viewItem == argocd-application",
          "group": "argocd@3"
        }
      ],
      "editor/context": [
        {
          "command": "kube9.applyYAML",
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "group": "kube9@1"
        }
      ]
    },
    "configuration": {
      "title": "kube9",
      "properties": {
        "kube9.serverUrl": {
          "type": "string",
          "default": "https://api.kube9.dev",
          "description": "kube9 server URL",
          "scope": "application"
        },
        "kube9.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "build": "webpack --mode production && npm run build:webview",
    "watch": "webpack --mode development --watch",
    "compile": "tsc && npm run build:webview",
    "build:webview": "esbuild src/webview/argocd-application/index.tsx --bundle --outfile=media/argocd-application/main.js --format=iife --platform=browser --minify",
    "pretest": "npm run compile && npm run lint",
    "test": "mocha --require source-map-support/register --require out/src/test/setup.js --ui tdd 'out/src/test/**/*.test.js'",
    "pretest:unit": "npm run compile && npm run lint",
    "test:unit": "mocha --require source-map-support/register --require out/src/test/setup.js --ui tdd 'out/src/test/**/*.test.js' --grep '@requires-k8s' --invert",
    "test:integration": "mocha --require source-map-support/register --require out/src/test/setup.js --ui tdd 'out/tests/**/*.test.js'",
    "test:all": "mocha --require source-map-support/register --require out/src/test/setup.js --ui tdd 'out/{src/test,tests}/**/*.test.js'",
    "lint": "eslint src --ext ts",
    "prepackage": "npm run build",
    "package": "vsce package",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.2",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.19.0",
    "babel-loader": "^9.1.3",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "css-loader": "^6.8.1",
    "esbuild": "^0.24.0",
    "eslint": "^8.45.0",
    "mocha": "^10.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "^25.0.2",
    "source-map-support": "^0.5.21",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.4",
    "typescript": "^5.1.6",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "js-yaml": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
